<!DOCTYPE html>
<html>
    <head>
        <title>Login</title>

    </head>
 
    <body>
    <header>
            <br><br>
            <div class="container">
                <div>
                    <div class="login-form-position">
                        <!-- <h2 class="text-center login-title">Sign in to continue to ParkingPal</h2> -->
                        <div class="account-wall">
                            <img class="profile-img" src="/public/img/polyparkingpal.jpg"
                                alt="">
                            <form class="form-signin" method="post">

                            <input type="hidden" name="redirect" value="{{redirect}}">
                            <input type="text" class="form-control" name='email' placeholder="Email" required autofocus>
                            <input type="password" name='password' class="form-control" placeholder="Password" required>
                            <button class="btn btn-lg btn-primary btn-block" type="submit">
                                Sign in</button>
                            <label class="checkbox pull-left">
                                <input type="checkbox" value="remember-me">
                                Remember me
                            </label>
                            <a href="#" class="pull-right need-help">Need help? </a><span class="clearfix"></span>
                            </form>
                            <a href="/sign-up?redirect={{redirect}}" class="btn btn-default btn-primary">Create an account </a>
                        </div><br><br>
                        
                    </div>
                </div>
            </div>
          </header>
    </body>     
</html>